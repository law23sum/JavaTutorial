<!-- src/test/resources/testng.xml -->
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="tutorialSuite" parallel="false">

    <!-- Picked up from -Denv / -Dbrowser (see Gradle/Maven below) -->
    <parameter name="env" value="${env}"/>
    <parameter name="browser" value="${browser}"/>

    <test name="TestNG Demos">
        <packages>
            <package name="com.tutorial.testing.testng"/>
        </packages>
    </test>

    <test name="Selenium Demos">
        <groups>
            <run>
                <include name="default"/>
            </run>
        </groups>
        <classes>
            <class name="com.tutorial.testing.selenium.tests.AskSearchEngineRegressionTest"/>
        </classes>
    </test>
</suite>
