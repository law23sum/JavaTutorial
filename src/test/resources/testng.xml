<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="tutorialSuite" parallel="false">

    <!-- Passed in via -Denv / -Dbrowser; defaults handled in code with @Optional -->
    <parameter name="env" value="${env}"/>
    <parameter name="browser" value="${browser}"/>

    <!-- TestNG demo package -->
    <test name="TestNG Demos">
        <packages>
            <package name="com.tutorial.testing.testng.tests"/>
        </packages>
        <classes>
            <class name="com.tutorial.testing.testng.tests.AnnotationsTest"/>
        </classes>
    </test>

    <!-- Selenium regression tests -->
    <test name="Selenium Demos">
        <groups>
            <run>
                <include name="default"/>
            </run>
        </groups>
        <classes>
            <class name="com.tutorial.testing.selenium.tests.AskSearchEngineRegressionTest"/>
        </classes>
        <!-- If you later add more Selenium tests under the same package,
             you can switch to packages-based discovery:
             <packages>
               <package name="com.tutorial.testing.selenium.tests"/>
             </packages>
        -->
    </test>

</suite>
